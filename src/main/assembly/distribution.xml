<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 
                              http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    
    <id>distribution</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>zrag-${project.version}</baseDirectory>
    
    <fileSets>
        <!-- 主应用程序JAR文件到lib目录 -->
        <fileSet>
            <directory>target</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>ZRAG-${project.version}.jar</include>
            </includes>
        </fileSet>
        
        <!-- 依赖JAR文件到lib目录（由dependency插件复制） -->
        <fileSet>
            <directory>target/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        
        <!-- 配置文件到config目录 -->
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>application.yml</include>
                <include>application-*.yml</include>
                <include>*.properties</include>
                <include>log4j2.xml</include>
            </includes>
        </fileSet>
        
        <!-- 示例文档到config目录 -->
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>sample-documents/**</include>
            </includes>
        </fileSet>
        
        <!-- 静态资源文件到web目录 -->
        <fileSet>
            <directory>src/main/resources/static</directory>
            <outputDirectory>web</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        
        <!-- 启动脚本到bin目录 -->
        <fileSet>
            <directory>script</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>start.sh</include>
                <include>start-with-minio.sh</include>
                <include>test-rag.sh</include>
                <include>test-stream.sh</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>
        
        <!-- 服务管理脚本到bin目录 -->
        <fileSet>
            <directory>target/scripts</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>zrag</include>
                <include>zrag.service</include>
                <include>install.sh</include>
                <include>uninstall.sh</include>
                <include>test-java-version.sh</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>
        
        <!-- 文档文件到docs目录 -->
        <fileSet>
            <directory>docs</directory>
            <outputDirectory>docs</outputDirectory>
            <includes>
                <include>**/*.md</include>
            </includes>
        </fileSet>
        
        <!-- 根目录文档 -->
        <fileSet>
            <directory>.</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>README.md</include>
                <include>LICENSE</include>
                <include>NOTICE</include>
            </includes>
        </fileSet>
        
        <!-- 创建logs目录 -->
        <fileSet>
            <directory>.</directory>
            <outputDirectory>logs</outputDirectory>
            <includes>
                <include>README.md</include>
            </includes>
            <excludes>
                <exclude>README.md</exclude>
            </excludes>
        </fileSet>
        
        <!-- 创建data目录用于存储数据 -->
        <fileSet>
            <directory>.</directory>
            <outputDirectory>data</outputDirectory>
            <includes>
                <include>README.md</include>
            </includes>
            <excludes>
                <exclude>README.md</exclude>
            </excludes>
        </fileSet>
        
        <!-- 创建temp目录用于临时文件 -->
        <fileSet>
            <directory>.</directory>
            <outputDirectory>temp</outputDirectory>
            <includes>
                <include>README.md</include>
            </includes>
            <excludes>
                <exclude>README.md</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    
</assembly>
